<h2>Edit celebrity</h2>
{{#with finded}}
<form action="/celebrities/:{{_id}}" method="POST">
  <label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="{{name}}">
  <label for="occupation">Occupation</label>
  <input id="occupation" type="text" name="occupation" placeholder="{{occupation}}">
  <label for="catchPhrase">Catch Phrase</label>
  <input id="catchPhrase" type="text" name="catchPhrase" placeholder="{{catchPhrase}}">
  <button type="submit">Submit</button>
</form>
{{/with}}
{{#if error}}
  <p style="color:red">{{error}}</p>
{{/if}}

<a href="/celebrities">Back</a>